<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DiariodeSaude.Views.BoasVindasView"
             Background="#F5F5FF">

    <UserControl.Styles>
        <!-- Estilo para os botões -->
        <Style Selector="Button">
            <Setter Property="Background" Value="#6A0DAD"/> <!-- Cor padrão -->
            <Setter Property="Foreground" Value="White"/> <!-- Cor do texto -->
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/> <!-- Borda invisível padrão -->
            <Setter Property="BorderThickness" Value="1"/> <!-- Espessura da borda -->
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/> <!-- Define o ponto de transformação -->
        </Style>

        <!-- Estilo para mudar a cor ao passar o mouse -->
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#D8BFD8"/> <!-- Cor lilás ao passar o mouse -->
            <Setter Property="Foreground" Value="White"/> <!-- Garante que o texto continua visível -->
        </Style>
    </UserControl.Styles>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="30">

        <!-- Nome do site -->
        <TextBlock Text="Diário de Saúde" 
                   FontSize="36" FontWeight="Bold" 
                   Foreground="#6A0DAD" 
                   HorizontalAlignment="Center" 
                   FontFamily="Arial"/>

        <!-- Mensagem de boas-vindas -->
        <TextBlock Text="Registre, visualize e analise suas informações diárias sobre saúde." 
                   FontSize="16" 
                   Foreground="#6A0DAD" 
                   HorizontalAlignment="Center" 
                   TextWrapping="Wrap" 
                   Width="400"
                   FontFamily="Segoe UI"/>

        <!-- Botões de navegação -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15">
            <Button Content="Registro Diário" Click="OnRegistroClick"/>
            <Button Content="Histórico" Click="OnHistoricoClick"/>
            <Button Content="Detalhes" Click="OnDetalhesClick"/>
            <Button Content="Relatórios" Click="OnRelatoriosClick"/>
        </StackPanel>

    </StackPanel>
</UserControl>