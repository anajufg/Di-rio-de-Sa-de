<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DiariodeSaude.Views.HistoricoView"
        Title="Histórico de Registros"
        Width="800" Height="600">
    <StackPanel>
        <!-- filtro por periodo -->
        <ComboBox x:Name="PeriodoComboBox">
            <ComboBoxItem Content="Diário"/>
            <ComboBoxItem Content="Semanal"/>
            <ComboBoxItem Content="Mensal"/>
        </ComboBox>
        <Button Content="Filtrar" Click="OnFiltrarClick"/>
        
        <!-- dataGrid para exibir os registros -->
        <DataGrid x:Name="HistoricoDataGrid" AutoGenerateColumns="True" />
    </StackPanel>
</Window>
